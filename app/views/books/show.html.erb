<div class ="container">
<div class = "row">
  <div class ="col-xs-3">
    <%= render 'users/abc', user: @user, book: @book %>
  </div>

      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
        <tr>
         <td>
          <%= link_to(user_path(@user))do %>
           <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
          <% end %>
           <div><%= link_to @user.name, user_path(@user) %></div>
         </td>
         <td>
          <%= @book_show.title %>  
         </td>
         <td>
          <%= @book_show.body %>
         </td>
         <% if @user == current_user %>
         <td>
          <%= link_to "Edit", edit_book_path(@book_show), class: "btn-sm btn-success" %>
         </td>
         <td>
          <%= link_to "Destroy", book_path(@book_show), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
         </td>
        </tr>
        <% end %>
        </table>
  </div>
</div>
</div>


