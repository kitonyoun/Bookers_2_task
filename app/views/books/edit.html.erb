<div class="col-md-6 col-md-offset-3">

<h1>Editing Book</h1>
<!-- form_for部分 -->
<% if @book_show.errors.any? %>

          <p><%= @book_show.errors.count %>errors prohibited this book from being saved:</p>
          <% @book_show.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          <% end %>
<%= form_for(@book_show) do |f| %>
 
 <div class="field row">
  <h4>title</h4>
  <%= f.text_field :title , class: "col-xs-12 book_title" %>
 </div>
 
 <div class="field row">
  <h4>Opinion</h4>
  <%= f.text_area :body , class: "col-xs-12 book_body" %>
 </div>
 
 <div class="actions row">
  <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
 </div>

  <div>
      <a><%= link_to "Show", book_path(@book_show.id) %></a>
      |
  	  <a><%= link_to "Back", books_path %></a>
  </div>
 
<% end %>
</div>
